        {
            "description": "Caps lock -> hyper (escape if pressed alone)",
			"manipulators": [
				{
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": ["any"]
						}
					},
					"to_delayed_action": {
						"to_if_canceled": [
							{
							"key_code": "escape"
							}
						]
					},
					"to_if_alone": [
						{
							"key_code": "escape",
							"halt": true
						}
					],
					"to_if_held_down": [
						{
							"key_code": "left_command",
							"modifiers": [
								"left_control",
								"left_option",
								"left_shift"
							]
						}
					],
					"type": "basic"
				}
			]
